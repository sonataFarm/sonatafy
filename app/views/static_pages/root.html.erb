<% if logged_in? %>
  <script type="text/javascript">
    prefetchedData = {};
    prefetchedData.currentUser = <%= render(
      "api/users/current.json.jbuilder",
      user: current_user
    ).html_safe %>

    prefetchedData.playlists = <%= render(
      "api/playlists/playlists.json.jbuilder",
      playlists: current_user.playlists
    ).html_safe %>

    prefetchedData.followedUsers = <%= render(
      "api/users/users.json.jbuilder",
      users: current_user.followed_users
    ).html_safe %>

    window.prefetchedData = prefetchedData;
  </script>
<% end %>

<div id="root"></div>
